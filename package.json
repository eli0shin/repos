{
  "name": "repos",
  "version": "0.7.0",
  "description": "CLI tool for managing git repositories",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun build src/cli.ts --compile --outfile repos",
    "dev": "bun run src/cli.ts",
    "typecheck": "bun tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "bun test",
    "test:watch": "bun test tests/ --watch",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^25.0.3",
    "bun-types": "^1.3.5",
    "eslint": "^9.39.2",
    "eslint-for-ai": "^1.0.10",
    "eslint-import-resolver-typescript": "^4.4.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "author": "@eli0shin",
  "license": "MIT",
  "dependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "commander": "^14.0.2"
  },
  "lint-staged": {
    "*.{ts,js,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
